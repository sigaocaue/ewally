{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
     "lib": ["es6"],
    "sourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "baseUrl": ".",
    "declaration": true,
    "allowJs": true,
    "paths": {
      "@api/*": ["./src/api/*"],
      "@infrastructure/*": ["./src/infrastructure/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
